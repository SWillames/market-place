<h1> Bem vindo ao Market Place!</h1>

<% if user_signed_in? %>
  <%= link_to 'Sair',  destroy_user_session_path, method: :delete %>
  
    <% if current_user.company_employee.nil? %>
      <%= link_to 'Meu Perfil', new_company_employee_path %>
    <% else %>
      <%= link_to 'Meu perfil',company_employee_path(current_user.company_employee) %>
    <% end%>

<% else %>
  <%= link_to 'Entrar', new_user_session_path %>
<% end %>  

<%= link_to 'Empresas',  companies_path%>
<%= link_to 'Anunciar',  new_ad_path%>


<%= form_with url: search_ad_path, method: :get, local:true do |form| %>
  <%= form.label :q, 'Buscar produto'%>
  <%= form.text_field :q %>
  <%= form.submit 'Buscar'%>
<% end %>
    
<% if @ads.nil?%>
  Nenhum produto encontrado
<%else%>
  <%= render partial: "ads/ad", collection: @ads %>
<%end%>


  <% @product_categories.each do |product_category| %>
    <%= link_to product_category.name, filter_ad_path(product_category_id: product_category.id ) %>
  <% end %>



